@import 'nib'
global-reset()

@font-face
  font-family 'Press Start 2P'
  src url('./fonts/PressStart2P-Regular.ttf') format('truetype')

@font-face
  font-family 'Khand'
  src url('./fonts/Khand/Khand-Regular.ttf') format('truetype')

HEADER_SIZE = 80px
LINK_HOVER_COLOR = #ffac08

*
  box-sizing border-box
  outline none

html
  height 100%

body
  background #393939
  text-align center
  position relative
  font-family 'Khand'
  min-height 100%

a
  color #fff
  text-decoration none
  i
  span
    color #fff

.center
  text-align center

#content
  position fixed
  top HEADER_SIZE
  bottom 0
  left 0
  right 0
  overflow auto

header
  position fixed
  top 0
  left 0
  right 0
  height HEADER_SIZE
  line-height @height
  z-index 10
  text-align left

  background #7d7e7d
  background -moz-linear-gradient(top,  #7d7e7d 0%, #0e0e0e 100%)
  background -webkit-linear-gradient(top,  #7d7e7d 0%,#0e0e0e 100%)
  background linear-gradient(to bottom,  #7d7e7d 0%,#0e0e0e 100%)

  border-bottom 1px solid rgba(0, 0, 0, 0.7)
  box-shadow 0 -1px 0 rgba(255, 255, 255, 0.2) inset

  a
    span
      font-family 'Press Start 2P' !important
      font-size 16px
    img
      width auto
      height 30px
      vertical-align middle
      margin 0 18px 0 10px
      position relative
      top -10px
    &:hover
      span
        color LINK_HOVER_COLOR

  monitor
    position absolute
    top 0
    right 0
    span.info
      display inline-block
      color #fff
      border-radius 8px
      border 1px solid #fff
      height 30px
      line-height 30px
      padding 0 10px
      margin-right 10px
      * + span
        color #46ff46
        margin-left 5px
        &.warning
          color orange
        &.danger
          color red

button
  box-shadow inset 0 1px 0 0 #bbdaf7
  background linear-gradient(to bottom, #79bbff 5%, #378de5 100%)
  background-color #79bbff
  border-radius 6px
  border 1px solid #84bbf3
  display inline-block
  color #ffffff
  font-family 'Khand'
  font-size 15px
  font-weight bold
  padding 4px 20px
  text-decoration none
  text-shadow 0 1px 0 #528ecc
  cursor pointer
  &:hover
    background linear-gradient(to bottom, #378de5 5%, #79bbff 100%)
    background-color #378de5
  &:active:not([disabled])
    position relative
    top 1px
  &[disabled]
    background #ccc
    border-color #ccc
    font-weight normal
    text-shadow none
    box-shadow none
    cursor default
  i.fa
    margin-right 8px

.no-entry
  color #ccc
  border 1px solid #ccc
  border-radius 10px
  width 600px
  margin 40px auto
  span
    text-align center
    display block
    padding 50px 10px

@keyframes downloading
  0%
    background-position 0 0
  100%
    background-position 50px 50px
  
@require './styl/home.styl'
@require './styl/credits.styl'
@require './styl/bios.styl'
@require './styl/systems.styl'
@require './styl/system.styl'
