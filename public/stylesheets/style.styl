@import 'nib'
global-reset()

@font-face
  font-family 'Press Start 2P'
  src url('./fonts/PressStart2P-Regular.ttf') format('truetype')

@font-face
  font-family 'Khand'
  src url('./fonts/Khand/Khand-Regular.ttf') format('truetype')

HEADER_SIZE = 80px
LINK_HOVER_COLOR = #ffac08

*
  box-sizing border-box
  outline none

html
  height 100%

body
  background #393939
  text-align center
  position relative
  font-family 'Khand'
  min-height 100%

a
  color #fff
  text-decoration none
  i
  span
    color #fff

  &:hover
    color LINK_HOVER_COLOR
    i
    span
      color LINK_HOVER_COLOR


.center
  text-align center

#content
  position fixed
  top HEADER_SIZE
  bottom 0
  left 0
  right 0
  overflow auto

header
  position fixed
  top 0
  left 0
  right 0
  height HEADER_SIZE
  line-height @height
  z-index 10
  text-align left

  background #7d7e7d
  background -moz-linear-gradient(top,  #7d7e7d 0%, #0e0e0e 100%)
  background -webkit-linear-gradient(top,  #7d7e7d 0%,#0e0e0e 100%)
  background linear-gradient(to bottom,  #7d7e7d 0%,#0e0e0e 100%)

  border-bottom 1px solid rgba(0, 0, 0, 0.7)
  box-shadow 0 -1px 0 rgba(255, 255, 255, 0.2) inset

  a
    span
      font-family 'Press Start 2P' !important
      font-size 16px
    img
      width auto
      height 30px
      vertical-align middle
      margin 0 18px 0 10px
      position relative
      top -10px

  monitor
    position absolute
    top 0
    right 0
    span.info
      display inline-block
      color #fff
      border-radius 8px
      border 1px solid #fff
      height 30px
      line-height 30px
      padding 0 10px
      margin-right 10px
      * + span
        color #46ff46
        margin-left 5px
        &.warning
          color orange
        &.danger
          color red

h1
  padding 30px
  font-family 'Press Start 2P' !important
  color #fff
  font-size 16px

h2
  padding 30px
  font-family 'Press Start 2P' !important
  color #8a8a8a
  font-size 12px

h1 + h2
  padding-top 0

button
  box-shadow inset 0 1px 0 0 #bbdaf7
  background linear-gradient(to bottom, #79bbff 5%, #378de5 100%)
  background-color #79bbff
  border-radius 6px
  border 1px solid #84bbf3
  display inline-block
  color #ffffff
  font-family 'Khand'
  font-size 15px
  font-weight bold
  padding 4px 20px
  text-decoration none
  text-shadow 0 1px 0 #528ecc
  cursor pointer
  &:hover
    background linear-gradient(to bottom, #378de5 5%, #79bbff 100%)
    background-color #378de5
  &:active:not([disabled])
    position relative
    top 1px
  &[disabled]
    background #ccc
    border-color #ccc
    font-weight normal
    text-shadow none
    box-shadow none
    cursor default
  i.fa
    margin-right 8px

.loading
.no-entry
  color #fff
  border 1px solid #fff
  border-radius 10px
  width 600px
  margin 40px auto
  span
    text-align center
    display inline-block
    padding 50px 10px

.loading
  color #fff
  border-color @color
  font-size 22px

.no-entry
  color #ccc
  border-color @color

#pictures
  position absolute
  left 15px
  top 15px
  img
    max-height 170px
    max-width 170px
    display block
    margin-bottom 20px

.channel
  vertical-align top
  display inline-block
  width 250px
  margin 20px
  cursor default
  .box
    position relative
    display inline-block
    background #292929
    width @width
    height 120px
    border 2px solid #bcbcbc
    border-radius 15px
    overflow hidden
    .helper // to vertical centerize the image
      display inline-block
      height 100%
      vertical-align middle
    img
      max-width 90%
      max-height 90%
      vertical-align middle

    i.fa-download
      position absolute
      top 10px
      right 10px
      font-size 26px
      display none

    i.fa-ban
      font-size 30px
      color #757575
      vertical-align middle

    .footer
      position absolute
      bottom 0
      left 0
      right 0
      text-align right
      padding 5px 10px
      background rgba(0, 0, 0, 0.5)
      border-bottom-left-radius 15px
      border-bottom-right-radius 15px
      span
        line-height 20px
        color #5bb0ff
        font-size 10px
        font-family 'Press Start 2P' !important

  &:hover:not(.hover-disabled)
    cursor pointer
    .box
      border-color LINK_HOVER_COLOR
      background #1f1e1e
      i.fa-download
        color LINK_HOVER_COLOR
        display block
      .footer > span
        color LINK_HOVER_COLOR
      &:before
        content ' '
        display block
        position absolute
        border-radius 11px
        top 0
        left 0
        right 0
        bottom 0
        box-shadow inset 0 0 10px 0 LINK_HOVER_COLOR

@keyframes downloading
  0%
    background-position 0 0
  100%
    background-position 50px 50px
  
@require './styl/home.styl'
@require './styl/credits.styl'
@require './styl/bios.styl'
@require './styl/system.styl'
@require './styl/download.styl'
@require './styl/source.styl'
@require './styl/component/uploading-list.styl'