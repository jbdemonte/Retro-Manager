breadcrumb-color-odd = #6f6f6f
breadcrumb-color-even = #4a4a4a
breadcrumb-color-hover = #949494
breadcrumb-color-active = #cecece
breadcrumb-span-color-active = #545454
breadcrumb-height = 18px

#breadcrumb ol
  line-height breadcrumb-height
  *
    font-family 'Khand' !important
    font-size 13px !important
    text-transform uppercase

  list-style none
  display inline-block
  padding-left 0
  margin 0

  li
    float left
    a
      color #FFF
      display block
      background breadcrumb-color-odd
      text-decoration none
      position relative
      height breadcrumb-height
      line-height @height
      padding 0 10px 0 5px
      text-align center
      margin-right (@height/2 + 2px)
      &:before
      &:after
        content ""
        position absolute
        top 0
        border-color breadcrumb-color-odd
        border-style solid
        border-width (@height/2) (@height/3)
        width 0
        height 0

      &:before
        left -(@height/2 - 1)
        border-left-color transparent
      &:after
        left 100%
        border-color transparent
        border-left-color breadcrumb-color-odd
      &:hover
        background-color breadcrumb-color-hover !important
        &:before
          border-color breadcrumb-color-hover !important
          border-left-color transparent !important
        &:after
          border-left-color breadcrumb-color-hover !important
      &.active
        background-color breadcrumb-color-active !important
        &:before
          border-color breadcrumb-color-active !important
          border-left-color transparent !important
        &:after
          border-left-color breadcrumb-color-active !important
        span
          color breadcrumb-span-color-active

    &:nth-child(even)
      a
        background-color breadcrumb-color-even
        &:before
          border-color breadcrumb-color-even
          border-left-color transparent
        &:after
          border-left-color breadcrumb-color-even
    &:first-child
      a
        padding-left 15px
        border-top-left-radius 4px
        border-bottom-left-radius 4px
        &:before
          border none
    &:last-child
      a
        padding-right 15px
        border-top-right-radius 4px
        border-bottom-right-radius 4px
        &:after
          border none
