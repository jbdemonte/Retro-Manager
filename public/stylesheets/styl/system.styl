#system

  .download
    position absolute
    right 15px
    top 15px
    i
      font-size 26px

  #games
    margin 20px auto 0
    font-size 12px
    color #fff
    width 600px
    border 1px solid #8c8c8c
    border-radius 3px

    li:nth-child(odd)
      background rgba(255, 255, 255, 0.1)
    li:hover
      background rgba(255, 255, 255, 0.5)
      span
        color #ffb116
    label
      position relative
      display inline-block
      width 600px
      cursor pointer
      padding 5px
      font-size 16px
      .unknown
        color #8c8c8c
        font-style italic
      input
        position absolute
        left 10px

  #games-tools
    width 600px
    margin 20px auto 0
    text-align left
